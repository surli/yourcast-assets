<?xml version="1.0" encoding="ASCII"?>
<prodsource:Source
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:prodsource="prodsource.yourcast.fr"
    xsi:schemaLocation="prodsource.yourcast.fr ../../metamodel/generation/products/source.ecore"
    name="Picasa"
    id="Picasa">
  <service name="fr.unice.i3s.modalis.yourcast.sources.picturealbum.picasa.war"/>
  <actor name="fr.yourcast.provider.model.actors.ServiceActorComposite"
      type="fr.yourcast.provider.model.actors.ServiceActorComposite"/>
  <parameters
      name="picasa.properties"/>
  <personalization
      image="picasa.png"
      listIntroductionMessage="Select a renderer to display the albums and searches">
    <methods
        name="Add by ID"
        pathPrefix="album/"
        introductionMessage="Complete the information to add the new album"
        editMessage="Edit the album information">
      <parameters
          name="User Id"
          type="STRING"
          tip="the user id, ex.,"
          constraint="NONE"/>
      <parameters
          name="Album Id"
          type="STRING"
          tip="the album ID, e.x., "
          constraint="NONE"/>
    </methods>
    <methods
        name="Add by Search"
        pathPrefix="search/"
        introductionMessage="Complete the information to search a group of photos by using a query"
        editMessage="Edit the query information">
      <parameters
          name="Query"
          type="STRING"
          tip="a Picasa query, e.x., sun"
          constraint="NONE"/>
    </methods>
    <list name="Album Path/Search"
        tip="The album path (userId/albumId) or the key word for the search"
        parameters="//@personalization/@methods.0/@parameters.1 //@personalization/@methods.1/@parameters.0"/>
    <list name="User"
        tip="the user id, ex.,"
        parameters="//@personalization/@methods.0/@parameters.0"/>
  </personalization>
  <mavenDependency
      groupId="fr.yourcast.sources"
      artifactId="sources-picasa"
      version="1.0.0-SNAPSHOT"/>
</prodsource:Source>
